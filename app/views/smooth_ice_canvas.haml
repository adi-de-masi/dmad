.canvas
  .mainbox.leftside
    %canvas#canvas
  .sidebox.rightside
    %a{:href=>"#", :id=>"smoothice_resetButton", :data-role=>"button", :data-inline=>"true"} reset
    %a{:href=>"#", :id=>"smoothice_pauseOrContinueButton", :data-role=>"button", :data-inline=>"true", :data-theme=>"b"}= @getPauseOrContinue()
    %label{:for=>"dotOrCircleButton"}Dots or Circles?
    %a{:href=>"#", :id=>"dotOrCircleButton", :data-role=>"button", :data-inline=>"true", :data-mini=>"true"}= @getDotOrCircle()
    %label{:for=>"velocitySlider"}Velocity
    %input{:type=>"range", :name=>"velocitySlider", :id=>"velocitySlider", :value=>"1", :min=>"1", :max=>"3"}
    %label{:for=>"accelSlider"}Acceleration
    %input{:type=>"range", :name=>"accelerationSlider", :id=>"accelerationSlider", :value=>"1", :min=>"1", :max=>"10000"}
    %label{:for=>"colorSlider"}Color
    %input{:type=>"range", :name=>"colorSlider", :id=>"colorSlider", :value=>"256", :min=>"1", :max=>"256"}

